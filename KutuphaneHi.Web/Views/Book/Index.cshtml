@model List<Book>

<a class="btn btn-dark" asp-action="Add" asp-controller=" Book" asp-controller="Book">Add</a>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Book Name</th>
            <th>Page Count</th>
            <th>ISBN</th>
            <th>Authors</th>
            <th>Publishers</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Id</td>
                <td>@book.Name</td>
                <td>@book.PageCount</td>
                <td>@book.ISBN</td>
                <td>
                    @foreach(var author in book.Authors)
                    {
                        @author.Name<br/>
                    }
                </td>
                <td>
                    @foreach(var publishers in book.Publishers)
                    {
                        @publishers.Name<br />
                    }
                </td>
                <td>
                  
                    <a onclick="return confirm('Are you sure you want to delete this?')" asp-controller="Book" asp-action="Delete" asp-route-id="@book.Id" class="btn btn-danger">Delete</a>

                    <a asp-controller="Book" asp-action="Edit" asp-route-id="@book.Id" class="btn btn-success">Edit</a>


                </td>
            </tr>
        }
    </tbody>
</table>
