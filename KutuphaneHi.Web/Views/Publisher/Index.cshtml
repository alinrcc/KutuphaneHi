@model List<Publisher>

 <a class="btn btn-primary" asp-action="Add" asp-controller="Publisher">Add Publisher</a>

 <table class="table table-striped table hover">
      <thead>
          <tr>
              <th>Publisher Name</th>
              <th>Address</th>
              <th>Actions</th>
          </tr>
      </thead>
      <tbody>
          @foreach(var item in Model)
          {
              <tr>
                   <td>@item.Id</td>
                   <td>@item.Name</td>
                   <td>@item.Address</td>
                <td>
                    <a onclick="return confirm('Are you sure you want to delete this?')" asp-controller="Publisher" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>

                    <a asp-controller="Publisher" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a>


                </td>
              </tr>
          }
      </tbody>
 </table>